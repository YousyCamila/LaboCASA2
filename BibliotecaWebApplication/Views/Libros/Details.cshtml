@model BibliotecaWebApplication.Models.Libro

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: #f8f1f7;
        color: #333333;
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        color: #6a1b9a;
    }

    hr {
        border-top: 2px solid #ba68c8;
    }

    .row dt {
        color: #6a1b9a;
        font-weight: bold;
    }

    .row dd {
        color: #333333;
        background-color: #ffffff;
        border: 1px solid #d1c4e9;
        border-radius: 4px;
        padding: 5px;
    }

    a {
        color: #6a1b9a;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        a:hover {
            background-color: #ba68c8;
            color: #ffffff;
        }

    .book-cover {
        max-width: 200px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <div>
        <!-- Aquí se podría mostrar la imagen de la portada del libro -->
        <img src="~/path/to/book-cover.jpg" alt="Portada de @Model.Titulo" class="book-cover" style="width:150px;height:200px;" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPaginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPaginas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LibroId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
