@model IEnumerable<BibliotecaWebApplication.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Libros</h1>

<p>
    <a asp-action="Create" class="btn btn-create mb-3">
        <i class="bi bi-plus-circle"></i> Crear Nuevo
    </a>
</p>

@if (ViewData["CurrentSort"] != null)
{
    <span>Ordenado por: @ViewData["CurrentSort"]</span>
}

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Buscar por título o autor: <input type="text" name="searchString" />
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["CurrentSort"] == "titulo_desc" ? "titulo_asc" : "titulo_desc")">
                    Título
                </a>
            </th>
            <th>Autores</th>
            <th>Número de Páginas</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @if (item.TieneAutores)
                    {
                        @foreach (var autor in item.Autores)
                        {
                            @autor.Nombre @autor.Apellidos

                            <br />
                        }
                    }
                    else
                    {
                        <p>Sin autores asignados.</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroPaginas)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LibroId" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.LibroId" class="btn btn-primary btn-sm">
                        <i class="bi bi-info-circle"></i> Detalles
                    </a>
                    <form id="delete-form-@item.LibroId" asp-action="Delete" asp-route-id="@item.LibroId" method="post" class="d-inline">
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.LibroId')">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    function confirmDelete(libroId) {
        Swal.fire({
            title: "¿Está seguro?",
            text: "¡No podrá revertir esto!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "¡Sí, eliminar!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "¡Eliminado!",
                    text: "Su libro ha sido eliminado.",
                    icon: "success"
                }).then(() => {
                    document.getElementById(`delete-form-${libroId}`).submit();
                });
            }
        });
    }
</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#librosTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}



