@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Roles</h2>

<a asp-action="Create" class="btn btn-create mb-3">
    <i class="bi bi-plus-circle"></i> Create New Role
</a>

<table class="table table-striped table-bordered shadow rounded" style="background-color: #f5f5f5;">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Fondo de la página */
    body {
        background-color: #ede7f6;
    }

    /* Estilos de los botones */
    .btn-primary {
        background-color: #7e57c2;
        border-color: #7e57c2;
        color: #ffffff;
    }

    .btn-danger {
        background-color: #f48fb1;
        border-color: #f48fb1;
        color: #ffffff;
    }

    .btn-create {
        background-color: #9575cd;
        border-color: #9575cd;
        color: #ffffff;
    }

        .btn-primary:hover,
        .btn-danger:hover,
        .btn-create:hover {
            opacity: 0.8;
        }

    /* Tabla */
    .thead-light {
        background-color: #d1c4e9;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #e1bee7;
    }

    .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .rounded {
        border-radius: 0.25rem !important;
    }
</style>

