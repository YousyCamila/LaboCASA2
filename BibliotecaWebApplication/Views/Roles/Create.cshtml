@model BibliotecaWebApplication.Models.ViewModels.RoleViewModel

<h2>Create Role</h2>

<form asp-action="Create" method="post" class="p-4 shadow rounded" style="background-color: #f5f5f5;">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Role Name</label>
        <input asp-for="Name" class="form-control" style="border-color: #b39ddb;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <!-- Botón para crear el rol -->
        <button type="submit" class="btn btn-create">
            <i class="bi bi-check-circle"></i> Create
        </button>

        <!-- Botón para regresar al Index -->
        <a asp-action="Index" class="btn btn-back">
            <i class="bi bi-arrow-left-circle"></i> Back to Roles
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Estilos personalizados en tonos morados */
    body {
        background-color: #ede7f6;
    }

    .form-label {
        color: #5a6268;
    }

    .btn-create {
        background-color: #7e57c2;
        border-color: #7e57c2;
        color: #ffffff;
    }

    .btn-back {
        background-color: #9575cd;
        border-color: #9575cd;
        color: #ffffff;
    }

        .btn-create:hover, .btn-back:hover {
            opacity: 0.8;
        }

    .p-4 {
        padding: 1.5rem !important;
    }

    .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .rounded {
        border-radius: 0.25rem !important;
    }
</style>
