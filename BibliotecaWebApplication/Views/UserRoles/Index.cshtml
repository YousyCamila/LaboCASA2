@model IEnumerable<BibliotecaWebApplication.Models.ViewModels.UserRolesViewModel>

<h2>Manage User Roles</h2>

<style>
    body {
        background-color: #f8f1f7; /* Fondo rosa pastel */
        color: #333333; /* Texto oscuro */
    }

    h2 {
        color: #6a1b9a; /* Morado oscuro */
        margin-bottom: 1rem;
    }

    .table {
        background-color: #ffffff; /* Fondo blanco */
        border-radius: 0.5rem;
        overflow: hidden;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th, .table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #ba68c8; /* Morado pastel */
            color: #ffffff; /* Texto blanco */
        }

        .table tbody tr:hover {
            background-color: #f3e5f5; /* Sutil morado claro */
        }

    .btn-info {
        background-color: #ce93d8; /* Botón morado pastel */
        color: #ffffff; /* Texto blanco */
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #ab47bc; /* Morado pastel más oscuro */
        }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Manage" asp-route-userId="@user.UserId" class="btn btn-info">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
