@model IEnumerable<BibliotecaWebApplication.Models.ViewModels.ManageUserRolesViewModel>

<h2>Manage Roles for User</h2>

@{
    var listModel = Model.ToList();
}

<style>
    body {
        background-color: #f8f1f7; /* Fondo rosa pastel */
        color: #333333; /* Texto oscuro */
    }

    h2 {
        color: #6a1b9a; /* Morado oscuro */
        margin-bottom: 1rem;
    }

    .form-check-label {
        color: #6a1b9a; /* Morado oscuro */
        margin-left: 0.5rem;
    }

    .form-check-input {
        background-color: #ffffff; /* Blanco */
        border: 1px solid #ba68c8; /* Borde morado pastel */
    }

    .btn-success {
        background-color: #ce93d8; /* Botón morado pastel */
        color: #ffffff; /* Texto blanco */
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #ab47bc; /* Morado pastel más oscuro */
        }
</style>

<form asp-controller="UserRoles" asp-action="Manage" method="post">
    <input type="hidden" name="userId" value="@ViewBag.userId" />

    @for (int i = 0; i < listModel.Count; i++)
    {
        var role = listModel[i];

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="model[@i].IsSelected" value="true" asp-for="@role.IsSelected" />
            <input type="hidden" name="model[@i].RoleId" value="@role.RoleId" />
            <input type="hidden" name="model[@i].RoleName" value="@role.RoleName" />
            <label class="form-check-label">@role.RoleName</label>
        </div>
    }

    <button type="submit" class="btn btn-success">Update Roles</button>
</form>
